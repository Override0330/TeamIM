<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_goneMarginTop="1dp">

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textColor="@color/black"
            android:id="@+id/tv_item_task_member_state"
            app:layout_constraintTop_toTopOf="@+id/iv_item_task_member_avatar"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_task_member_avatar"
            app:layout_constraintStart_toStartOf="@+id/guideline15"
            />

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/iv_item_task_member_avatar"
            app:layout_constraintStart_toEndOf="@+id/tv_item_task_member_state"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_task_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Override"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_task_member_avatar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline15"
            app:layout_constraintGuide_percent="0.04136253"/>
</androidx.constraintlayout.widget.ConstraintLayout>