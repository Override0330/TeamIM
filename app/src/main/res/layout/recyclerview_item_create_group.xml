<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white">

        <CheckBox
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/check_box_create_group"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_item_create_group_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:srcCompat="@tools:sample/avatars"
                app:layout_constraintStart_toEndOf="@+id/check_box_create_group"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/check_box_create_group"
                app:layout_constraintBottom_toBottomOf="@+id/check_box_create_group"/>

        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline7"
                app:layout_constraintGuide_percent="0.04"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_create_group_name"
                app:layout_constraintStart_toEndOf="@+id/iv_item_create_group_avatar"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="@+id/iv_item_create_group_avatar"
                android:textSize="19sp"
                tools:text="@tools:sample/full_names"
                app:layout_constraintBottom_toBottomOf="@+id/iv_item_create_group_avatar"/>

        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline8"
                app:layout_constraintGuide_percent="0.96"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>